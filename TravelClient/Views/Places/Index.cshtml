@{
    ViewData["Title"] = "Home Page";
}

<h1>New Place:</h1>

<form action="/places" method="post">
  <label for="name">Place's Name</label>
  <input id="name" name="name" type="text">
  <label for="country">Place's Country</label>
  <input id="country" name="country" type="text">
  <label for="rating">Place's Rating</label>
  <input id="rating" name="rating" type="number">
  <button type="submit">Go!</button>
</form>

<h1>All Places:</h1>

<ol>
@foreach (Place place in Model)
{
    <ul>
        <li>Name: @place.Name</li>
        <li>Country: @place.Country</li>
        <li>Rating: @place.Rating</li>
        <li>
        Reviews: 
            @foreach(Review review in place.Reviews)
            {
                <ul>
                    <li>@review.UserName</li>
                    <li>@review.UserRating</li>
                </ul>
            }
        </li>
    </ul>
    <br>
}
</ol>